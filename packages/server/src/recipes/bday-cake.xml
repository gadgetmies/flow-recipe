<?xml version="1.0" encoding="utf-8" ?>
<recipe ref="https://www.wearesovegan.com/epic-microwave-chocolate-cake/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="recipe.xsd">
    <title>Birthday cake</title>
    <ingredients>
        <ingredient id="oat-milk">oat milk</ingredient>
        <ingredient id="white-chocolate-spread">white chocolate spread</ingredient>
        <ingredient id="instant-coffee">instant coffee</ingredient>
        <ingredient id="flour">flour</ingredient>
        <ingredient id="baking-powder">baking powder</ingredient>
        <ingredient id="caster-sugar">caster sugar</ingredient>
        <ingredient id="vegan-cream">vegan cream</ingredient>
        <ingredient id="vegan-yoghurt">vegan yoghurt</ingredient>
        <ingredient id="margarine">margarine</ingredient>
        <ingredient id="cucumber">cucumber</ingredient>
        <ingredient id="cream-of-tartar">cream of tartar</ingredient>
        <ingredient id="salt">salt</ingredient>
        <ingredient id="raspberries">raspberries</ingredient>
        <ingredient id="ground-coriander">ground coriander</ingredient>
        <ingredient id="gin">gin</ingredient>
        <ingredient id="xanthan">xanthan</ingredient>
        <ingredient id="lime">lime</ingredient>
    </ingredients>
    <tools>
        <tool id="silicone-cake-mould">silicone cake mould<properties>
                <property name="circumference">
                    <numeric-value number="20" unit="centimeters"/>
                </property>
            </properties>
        </tool>
        <tool id="microwave-safe-jug">microwave safe jug</tool>
        <tool id="spatula">spatula</tool>
        <tool id="bowl">bowl</tool>
        <tool id="cup">cup</tool>
        <tool id="whisk">whisk</tool>
        <tool id="frosting-spatula">frosting spatula</tool>
        <tool id="cooling-rack">cooling rack</tool>
        <tool id="precision-scale">precision scale</tool>
        <tool id="kitchen-scale">kitchen scale</tool>
        <tool id="plate">plate</tool>
        <tool id="spoon">spoon</tool>
        <tool id="fork">fork</tool>
        <tool id="serving-plate">serving plate</tool>
        <tool id="fruit-baller">fruit baller</tool>
        <tool id="microwave-oven">microwave oven</tool>
    </tools>
    <tasks>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="40" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="oat-milk"/>
            </inputs>
            <outputs>
                <output id="oat-milk-for-coffee">oat milk for coffee</output>
                <!-- TODO: How to differentiate different measurements of same ingredient? -->
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="100" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="bowl"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="oat-milk"/>
            </inputs>
            <outputs>
                <output id="oat-milk-for-batter">oat milk for batter</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="20" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="white-chocolate-spread"/>
            </inputs>
            <outputs>
                <output id="white-chocolate-spread-for-filling">white chocolate for filling</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="20" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="white-chocolate-spread"/>
            </inputs>
            <outputs>
                <output id="white-chocolate-spread-for-frosting">white chocolate spread for frosting</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="8" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="precision-scale"/>
            </tools>
            <inputs>
                <input ref="instant-coffee"/>
            </inputs>
            <outputs>
                <output id="measured-instant-coffee">instant coffee</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="170" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="bowl"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="margarine"/>
            </inputs>
            <outputs>
                <output id="measured-margarine">margarine</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="20" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="margarine"/>
            </inputs>
            <outputs>
                <output id="margarine-for-greasing">margarine</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="220" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="bowl"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="flour"/>
            </inputs>
            <outputs>
                <output id="measured-flour">flour</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="100" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="bowl"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="caster-sugar"/>
            </inputs>
            <outputs>
                <output id="measured-caster-sugar">caster sugar</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="100" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="vegan-cream"/>
            </inputs>
            <outputs>
                <output id="vegan-cream-for-frosting">vegan cream</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="1" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="cream-of-tartar"/>
            </inputs>
            <outputs>
                <output id="measured-cream-of-tartar">cream of tartar</output>
            </outputs>
        </task>

        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="4" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="ground-coriander"/>
            </inputs>
            <outputs>
                <output id="measured-ground-coriander">coriander</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="4" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="salt"/>
            </inputs>
            <outputs>
                <output id="salt-for-batter">salt for batter</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="4" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="xanthan"/>
            </inputs>
            <outputs>
                <output id="measured-xanthan">xanthan</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="4" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="baking-powder"/>
            </inputs>
            <outputs>
                <output id="measured-baking-powder">baking powder</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="200" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="plate"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="cucumber"/>
            </inputs>
            <outputs>
                <output id="measured-cucumber">cucumber for filling</output>
            </outputs>
        </task>

        <task operation="soften">
            <instructions>
                Soften the
                <input ref="measured-margarine"/>
                with a
                <tool ref="fork" reserved="true"/>
                in a
                <tool ref="bowl"/>.
            </instructions>
            <outputs>
                <output id="softened-margarine">softened margarine</output>
            </outputs>
        </task>

        <task operation="cream">
            <instructions>
                Whip the
                <input ref="softened-margarine"/>
                with
                <input ref="measured-caster-sugar"/>
                using a
                <tool ref="whisk" reserved="true"/>
                until light and fluffy.
            </instructions>
            <outputs>
                <output id="creamed-margarine-and-sugar">creamed margarine and sugar</output>
            </outputs>
        </task>

        <task operation="heat">
            <options>
                <option name="temperature">
                    <numeric-value number="60" unit="celsius"/>
                </option>
                <option name="duration">
                    <numeric-value number="30" unit="seconds"/>
                </option>
            </options>
            <tools>
                <tool ref="microwave-oven"/>
            </tools>
            <inputs>
                <input ref="oat-milk-for-coffee"/>
            </inputs>
            <outputs>
                <output id="heated-oat-milk">heated oat milk</output>
            </outputs>
        </task>

        <task operation="mix">
            <instructions>
                Add the
                <input ref="measured-instant-coffee"/>
                to
                <input ref="heated-oat-milk"/>
                and stir with a
                <tool ref="spoon" reserved="true"/>.
            </instructions>
            <outputs>
                <output id="oat-milk-coffee">oat milk coffee</output>
            </outputs>
        </task>

        <task operation="mix">
            <instructions>
                Add the
                <input ref="measured-flour"/>,
                <input ref="measured-baking-powder"/>,
                <input ref="salt-for-batter"/>,
                <input ref="measured-xanthan"/>
                and
                <input ref="measured-ground-coriander"/>
                to
                <tool ref="bowl" reserved="true"/>
                and stir with a
                <tool ref="spatula" reserved="true"/>.
            </instructions>
            <outputs>
                <output id="dry-ingredients">dry ingredients</output>
            </outputs>
        </task>
        <task operation="mix">
            <instructions>
                Mix the
                <input ref="dry-ingredients"/>
                into the
                <input ref="creamed-margarine-and-sugar"/>.
            </instructions>
            <outputs>
                <output id="butter-sugar-dry-ingredient-mix">butter, sugar and dry ingredients mix</output>
            </outputs>
        </task>
        <task operation="mix">
            <instructions>
                First, add the
                <input ref="oat-milk-for-batter"/>
                into the
                <input ref="butter-sugar-dry-ingredient-mix"/>
                and stir with a
                <tool ref="spatula"/>
                until smooth. Then add the
                <input ref="oat-milk-coffee"/>
                and, again, mix until smooth.
            </instructions>
            <outputs>
                <output id="batter">batter</output>
                <tool ref="bowl"/> <!-- TODO: need to be specific about which bowl is freed! -->
                <tool ref="microwave-safe-jug"/>
            </outputs>
        </task>

        <task operation="grease">
            <instructions>
                Grease the sides of a
                <tool ref="silicone-cake-mould" reserved="true"/>
                with
                <input ref="margarine-for-greasing"/>.
            </instructions>
            <outputs>
                <output id="prepared-cake-mould">prepared cake mould</output>
            </outputs>
        </task>
        <task operation="split">
            <options>
                <option name="parts">
                    <numeric-value number="2"/>
                </option>
            </options>
            <inputs>
                <input ref="batter"/>
            </inputs>
            <tools>
                <tool ref="bowl" reserved="true"/>
            </tools>
            <outputs>
                <output id="split-batter-in-a-bowl">split batter</output>
            </outputs>
        </task>
        <task operation="pour">
            <instructions>
                Pour the
                <input ref="split-batter-in-a-bowl"/>
                into the
                <input ref="prepared-cake-mould">cake mould
                </input> <!-- TODO: this is a input, but also a tool, so which tag to use? -->
            </instructions>
            <outputs>
                <output id="batter-in-mould">cake mould with batter</output>
                <tool ref="bowl" name="used bowl"/>
            </outputs>
        </task>
        <task operation="bake-in-microwave"> <!-- operation is identical to heat -->
            <instructions>
                Bake the
                <input ref="batter-in-mould"/>
                in the
                <tool ref="microwave-oven"/>
                with
                <option name="power">
                    <numeric-value number="700" unit="watts"/>
                </option>
                for
                <option name="duration">
                    <numeric-value number="4" unit="minutes"/>
                </option>
                or until a toothpick comes out clean.
            </instructions>
            <outputs>
                <output id="baked-cake">baked cake</output>
            </outputs>
        </task>
        <task operation="chill"><!-- should there be a combined take out -operation? -->
            <instructions>
                Cool the
                <input ref="baked-cake"/>
                for
                <option name="duration">
                    <numeric-value number="10" unit="minutes"/><!-- TODO: was 10 minutes -->
                </option>
                in the <tool ref="silicone-cake-mould">mould</tool>.
            </instructions>
            <outputs>
                <output id="cooled-cake-in-mould">cooled cake in moulds</output>
            </outputs>
        </task>
        <task operation="separate">
            <instructions>
                Detach the
                <input ref="cooled-cake-in-mould">cooled cakes</input>
                from the mould by running a
                <tool ref="spatula"/>
                around the edges. Turn out the cake from the mould onto a
                <tool ref="serving-plate"/>.
            </instructions>
            <outputs>
                <output id="cake-on-a-plate">cake on a plate</output>
                <tool ref="silicone-cake-mould" name="used cake mould"/>
            </outputs>
        </task>

        <task operation="grate">
            Grate the
            <input ref="measured-cucumber"/>
            into a
            <tool ref="sieve"/>
            on top of a
            <tool ref="bowl"/>.
            Press the grated cucumber to push out the liquid.
            <outputs>
                <!-- TODO: this creates two grate tasks -->
                <output id="grated-cucumber">grated cucumber</output>
                <output id="cucumber-juice">cucumber juice</output>
            </outputs>
        </task>

        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="40" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="vegan-yoghurt"/>
            </inputs>
            <outputs>
                <output id="measured-vegan-yoghurt">yoghurt for filling</output>
            </outputs>
        </task>

        <task operation="mix">
            <instructions>
                Mix the
                <input ref="grated-cucumber"/>,
                <input ref="measured-vegan-yoghurt"/>
                and
                <input ref="white-chocolate-spread-for-filling"/>
                in a
                <tool ref="bowl" reserved="true"/>
            </instructions>
            <outputs>
                <output id="filling">filling</output>
            </outputs>
        </task>

        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="40" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="cucumber-juice"/>
            </inputs>
            <outputs>
                <output id="measured-cucumber-juice">cucumber juice for filling</output>
            </outputs>
        </task>

        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="20" unit="g"/>
                </option>
            </options>
            <tools>
                <tool ref="cup"/>
                <tool ref="kitchen-scale"/>
            </tools>
            <inputs>
                <input ref="gin"/>
            </inputs>
            <outputs>
                <output id="measured-gin">gin</output>
            </outputs>
        </task>

        <task operation="mix">
            <instructions>
                Add
                <input ref="measured-gin"/>
                to the
                <input ref="measured-cucumber-juice"/>
            </instructions>
            <outputs>
                <output id="cucumber-gin-mix">cucumber gin mix</output>
            </outputs>
        </task>
        <task operation="fill">
            <instructions>
                Brush the
                <input ref="cake-on-a-plate">cake</input>
                lightly with the
                <input ref="cucumber-gin-mix"/>.
                Spread the
                <input ref="filling"/>
                over the top and place the second
                <input ref="cake-on-a-plate">cake</input>
                on top of the filling. Brush also the top of the cake.
            </instructions>
            <outputs>
                <output id="filled-cake">filled cake</output>
                <tool ref="spatula"/>
            </outputs>
        </task>
        <task operation="mix">
            <instructions>
                Add
                <input ref="vegan-cream-for-frosting"/>
                and
                <input ref="measured-cream-of-tartar"/>
                into a
                <tool ref="bowl"/>
            </instructions>
            <outputs>
                <output id="cream-tartar-mix">cream tartar mix</output>
            </outputs>
        </task>
        <task operation="whip">
            <instructions>
                Whip the
                <input ref="cream-tartar-mix"/>
                using a
                <tool ref="whisk"/>
                until soft peaks form.
            </instructions>
            <outputs>
                <output id="softly-whisked-cream">softly whipped cream</output>
            </outputs>
        </task>
        <task operation="mix">
            <instructions>
                Add
                <input ref="white-chocolate-spread-for-frosting"/>
                to the
                <input ref="softly-whisked-cream"/>.
            </instructions>
            <outputs>
                <output id="white-chocolate-cream-mix">white chocolate cream mix</output>
            </outputs>
        </task>
        <task operation="whip">
            <instructions>
                Whip the
                <input ref="white-chocolate-cream-mix"/>
                until hard peaks form using a
                <tool ref="whisk" reserved="true"/>.
            </instructions>
            <outputs>
                <output id="frosting">frosting</output>
            </outputs>
        </task>
        <task operation="spread">
            <instructions>
                Add the
                <input ref="frosting"/>
                on top of the center of the
                <input ref="filled-cake">cake</input>
                and use a
                <tool ref="frosting-spatula"/>
                to ease it around the sides.
            </instructions>
            <outputs>
                <output id="frosted-cake">frosted cake</output>
            </outputs>
        </task>

        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="10" unit="cm"/>
                </option>
            </options>
            <inputs>
                <input ref="cucumber"/>
            </inputs>
            <tools>
                <tool ref="plate"/>
            </tools>
            <outputs>
                <output id="cucumber-for-decorations">cucumber for decorations</output>
            </outputs>
        </task>
        <task operation="ball">
            <instructions>
                Use a
                <tool ref="fruit-baller"/>
                to make balls from the
                <input ref="cucumber-for-decorations"/>
            </instructions>
            <outputs>
                <output id="cucumber-balls">cucumber balls</output>
            </outputs>
        </task>

        <task operation="decorate">
            <instructions>
                Place the
                <input ref="cucumber-balls"/>
                and
                <input ref="raspberries"/>
                on top of the
                <input ref="frosted-cake"/>.
            </instructions>
            <outputs>
                <output id="decorated-cake">decorated cake</output>
            </outputs>
        </task>

        <task operation="grate">
            <inputs>
                <input ref="lime"/>
            </inputs>
            <tools>
                <tool ref="grater"/>
                <tool ref="cup"/>
            </tools>
            <outputs>
                <output id="lime-curls">lime curls</output>
            </outputs>
        </task>

        <task operation="sprinkle">
            <instructions>
                Sprinkle
                <input ref="lime-curls"/>
                on top of the
                <input ref="decorated-cake">cake</input>
            </instructions>
            <outputs>
                <output id="finished-cake">birthday cake</output>
            </outputs>
        </task>
        <task operation="enjoy">
            <instructions>
                Enjoy the <input ref="finished-cake"/> and celebrate!
            </instructions>
            <outputs>
                <output id="great-fun">great fun</output>
            </outputs>
        </task>
    </tasks>
</recipe>