<?xml version="1.0" encoding="utf-8"?>
<recipe xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="recipe.xsd">
    <title>Simplified Tiramisu (using ready-made ingredients)</title>
    <ingredients>
        <ingredient id="ladyfingers">ladyfingers</ingredient>
        <ingredient id="coffee">strong coffee or espresso</ingredient>
        <ingredient id="mascarpone">mascarpone</ingredient>
        <ingredient id="whipped-cream">whipped cream</ingredient>
        <ingredient id="sugar">sugar</ingredient>
        <ingredient id="vanilla-extract">vanilla extract</ingredient>
        <ingredient id="cocoa-powder">cocoa powder</ingredient>
    </ingredients>
    <tools>
        <tool id="mixing-bowl">bowl</tool>
        <tool id="spoon">spoon</tool>
        <tool id="shallow-dish">shallow dish</tool>
        <tool id="cup">cup</tool>
        <tool id="square-dish">square dish</tool>
        <tool id="cover">cover</tool>
        <tool id="kitchen-scale">kitchen scale</tool>
        <tool id="flour-sieve">flour sieve</tool>
        <tool id="plate">plate</tool>
    </tools>
    <tasks>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="250" unit="g" />
                </option>
            </options>
            <tools>
                <tool ref="mixing-bowl" reusable="true" />
                <tool ref="kitchen-scale" reusable="true" />
            </tools>
            <inputs>
                <input ref="mascarpone" />
            </inputs>
            <outputs>
                <output id="measured-mascarpone">mascarpone</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="30" unit="g">converted from volume</numeric-value>
                </option>
            </options>
            <tools>
                <tool ref="mixing-bowl" reusable="true" />
                <tool ref="kitchen-scale" reusable="true" />
            </tools>
            <inputs>
                <input ref="sugar" />
            </inputs>
            <outputs>
                <output id="measured-sugar">sugar</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="1" unit="tsp" />
                </option>
            </options>
            <tools>
                <tool ref="cup" reusable="true" />
            </tools>
            <inputs>
                <input ref="vanilla-extract" />
            </inputs>
            <outputs>
                <output id="measured-vanilla">vanilla extract</output>
            </outputs>
        </task>
        <task operation="measure">
            <options>
                <option name="amount">
                    <numeric-value number="250" unit="ml">converted from 2 cups</numeric-value>
                </option>
            </options>
            <tools>
                <tool ref="mixing-bowl" reserved="true" reusable="true" />
            </tools>
            <inputs>
                <input ref="coffee" />
            </inputs>
            <outputs>
                <output id="measured-coffee">coffee</output>
            </outputs>
        </task>
        <task operation="mix">
            <tools>
                <tool ref="spoon" reusable="true" />
                <tool ref="mixing-bowl" reserved="true" reusable="true" />
            </tools>
            <inputs>
                <input ref="measured-mascarpone" />
                <input ref="measured-sugar" />
                <input ref="measured-vanilla" />
            </inputs>
            <outputs>
                <output id="cream-base">cream base</output>
            </outputs>
        </task>
        <task operation="fold">
            <tools>
                <tool ref="mixing-bowl" reserved="true" reusable="true" />
                <tool ref="spoon" reusable="true" />
            </tools>
            <inputs>
                <input ref="cream-base" />
                <input ref="whipped-cream" />
            </inputs>
            <outputs>
                <output id="cream-mixture">cream mixture</output>
            </outputs>
        </task>
        <task operation="pour">
            <tools>
                <tool ref="shallow-dish" reusable="true" />
            </tools>
            <inputs>
                <input ref="measured-coffee" />
            </inputs>
            <outputs>
                <output id="coffee-in-dish">coffee dish</output>
            </outputs>
        </task>
        <task operation="soak">
            <options>
                <option name="duration">
                    <numeric-value number="5" unit="seconds" />
                </option>
            </options>
            <instructions><!--
                TODO: how to indicate the plate is the same plate? -->
            Take a <tool ref="plate" />. Soak <input ref="ladyfingers" amount="10" /> in the <input
                    ref="coffee-in-dish" /> for 5 seconds and place them on the <tool ref="plate" />
            . </instructions>
            <outputs>
                <output id="dipped-ladyfingers-layer">dipped ladyfingers</output>
            </outputs>
        </task>
        <task operation="place">
            <tools>
                <tool ref="square-dish" reusable="true" />
            </tools>
            <inputs>
                <input ref="dipped-ladyfingers-layer" />
            </inputs>
            <outputs>
                <output id="first-ladyfinger-layer">layer of ladyfingers</output>
            </outputs>
        </task>
        <task operation="spread">
            <tools>
                <tool ref="spoon" reusable="true" />
            </tools>
            <inputs>
                <input ref="cream-mixture" />
                <input ref="first-ladyfinger-layer" />
            </inputs>
            <outputs>
                <output id="layer-with-cream">cream layer</output>
            </outputs>
        </task>
        <task operation="dust">
            <inputs>
                <input ref="layer-with-cream" />
                <input ref="cocoa-powder" />
            </inputs>
            <tools>
                <tool ref="flour-sieve" />
            </tools>
            <outputs>
                <output id="dusted-tiramisu">dusted tiramisu</output>
            </outputs>
        </task>
    </tasks>
</recipe>